{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": [
      "mocha",
      "jest"
    ]
  },
  "include": ["src/**/*.ts", "jest.config.js"],
  "exclude": ["node_modules"]
}
